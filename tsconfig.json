{
  "compilerOptions": {
    "target": "ES2019", 
    "module": "commonjs", 
    "strict": true, 
    "esModuleInterop": true, 
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true, 
    "skipLibCheck": true, 
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist", 
    "rootDir": "./src" 
  },
  "include": ["src/**/*.ts"], 
  "exclude": ["node_modules", "dist"] 
}
